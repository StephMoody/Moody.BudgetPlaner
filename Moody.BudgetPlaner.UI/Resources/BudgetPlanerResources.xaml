<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Moody.BudgetPlaner.UI.ViewModels">
    <DataTemplate x:Key="BudgetPlanerMainViewModelDataTemplate" DataType= "{x:Type viewModels:BudgetPlanerViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
            </Grid.RowDefinitions>
            
            <ContentControl Grid.Row="0" DockPanel.Dock="Top" ContentTemplate="{DynamicResource IncomeDataTemplate}" Content="{Binding IncomeViewModel}">
            </ContentControl>
            <ItemsControl Grid.Row="1" DockPanel.Dock="Top" 
                          HorizontalAlignment="Left" 
                          ItemsSource="{Binding BudgetPositionViewModels}"
                          ItemTemplate="{DynamicResource BudgetPositionDataTemplate }">
            </ItemsControl>
            <TextBox Grid.Row="2" Text="{Binding Balance, Mode=OneWay}"></TextBox>
            <Button Grid.Row="3" Command="{Binding AddCommand}" Height="30" Width="100" Content="Add" DockPanel.Dock="Top" HorizontalAlignment="Left"></Button>
            
        </Grid>
    </DataTemplate>
    
    <DataTemplate x:Key="AddPositionWindowDataTemplate" DataType="{x:Type viewModels:AddPositionViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Row="0" Grid.Column="0" Text="Designation"></TextBox>
            <TextBox Grid.Row="1" Grid.Column="0" Text="Amount"></TextBox>
            <TextBox Grid.Row="2" Grid.Column="0" Text="Date"></TextBox>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Designation}"></TextBox>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Amount}"></TextBox>
            <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="{Binding dueDate}"></DatePicker>
            <Button Grid.Row="3" Grid.Column="1" Content="OK" Command="{Binding AcceptCommand}"></Button>
        </Grid>
    </DataTemplate>
    
    <DataTemplate x:Key="IncomeDataTemplate" DataType="{x:Type viewModels:IncomeViewModel}">
        <StackPanel Orientation="Horizontal">
            <TextBox Style="{DynamicResource DesignationTextBox}" Text= "Monthly Income:" />
            <TextBox Style="{DynamicResource InputTextBox}" Text="{Binding MonthlyIncome, Mode=TwoWay}" Width="200"> </TextBox>
        </StackPanel>
    </DataTemplate>
    
    <Style TargetType="{x:Type TextBox}" x:Key="InputTextBox">
        <Style.Setters>
            <Setter Property="BorderThickness" Value="1"/>
        </Style.Setters>
    </Style>
    
    <Style TargetType="{x:Type TextBox}" x:Key="DesignationTextBox">
        <Style.Setters>
            <Setter Property="BorderThickness" Value="0"/>
        </Style.Setters>
    </Style>
    
    <DataTemplate x:Key="BudgetPositionDataTemplate" DataType="{x:Type viewModels:BudgetPositionViewModel}">
        <StackPanel Orientation="Horizontal">
            <TextBox Text="{Binding Designation, Mode=OneWay}" Style="{DynamicResource DesignationTextBox}"> </TextBox>
            <TextBox Text="{Binding Amount, Mode=OneWay}" Style="{DynamicResource DesignationTextBox}"> </TextBox>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>